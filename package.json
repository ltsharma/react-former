{
    "name": "react-formr",
    "version": "1.3.2",
    "description": "Form managing component for React & React Native",
    "main": "./lib/index.js",
    "types": "./lib/index.d.ts",
    "scripts": {
        "test": "jest",
        "testu": "jest --updateSnapshot",
        "tsc": "tsc -p tsconfig.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ltsharma/react-formr.git"
    },
    "keywords": [
        "react",
        "react-native",
        "react-form",
        "react-native-form"
    ],
    "author": "ltsharma",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ltsharma/react-formr/issues"
    },
    "homepage": "https://github.com/ltsharma/react-formr#readme",
    "peerDependencies": {
        "react": "^16.0.0",
        "react-native": "^0.63.3"
    },
    "dependencies": {
        "react": "^17.0.1",
        "react-native": "^0.63.3",
        "validator": "~13.1.1"
    },
    "devDependencies": {
        "@babel/core": "^7.8.4",
        "@babel/runtime": "^7.8.4",
        "@react-native-community/eslint-config": "^1.1.0",
        "@testing-library/jest-native": "^3.4.3",
        "@types/jest": "^25.2.3",
        "@types/react": "^16.9.34",
        "@types/react-native": "^0.63.30",
        "@types/react-test-renderer": "^16.9.2",
        "@types/validator": "^13.1.0",
        "@typescript-eslint/eslint-plugin": "^2.27.0",
        "@typescript-eslint/parser": "^2.27.0",
        "babel-core": "^6.26.3",
        "babel-jest": "^25.1.0",
        "eslint": "^6.5.1",
        "jest": "^26.6.1",
        "metro-react-native-babel-preset": "^0.59.0",
        "react-native-testing-library": "^6.0.0",
        "react-test-renderer": "16.13.1",
        "ts-jest": "^26.4.2",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "tslint-eslint-rules": "^5.4.0",
        "tslint-react": "^5.0.0",
        "typescript": "^3.8.3"
    },
    "jest": {
        "preset": "react-native",
        "setupFilesAfterEnv": [
            "@testing-library/jest-native/extend-expect"
        ],
        "transform": {
            "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js",
            "\\.(ts|tsx)$": "ts-jest"
        },
        "globals": {
            "ts-jest": {
                "tsconfig": "tsconfig.jest.json"
            }
        },
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$"
    }
}
